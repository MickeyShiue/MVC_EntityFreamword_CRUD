@model MVC2.Models.Guestbooks

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
   <h3>修改留言</h3>
   <table>
       <tr>
           <td>
               @Html.LabelFor(p=>p.Name)
           </td>
           <td>
               @Html.TextBoxFor(p => p.Name)
           </td>
       </tr>
       <tr>
           <td>
               @Html.LabelFor(p => p.Content)
           </td>
           <td>
               @Html.TextBoxFor(p => p.Content)
           </td>
       </tr>
   </table>

    if (Model.ReplyTime == null)
    {
        <input type="submit" value="修改留言" />
    }
    else
    {
        <text>此留言回覆過無法修改，請</text>
        @Html.ActionLink("返回列表","Index")
    }

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
